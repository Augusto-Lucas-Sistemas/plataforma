{
	"info": {
		"_postman_id": "a1b2c3d4-e5f6-4a7b-8c9d-0e1f2a3b4c5d",
		"name": "Plataforma Multimodular",
		"description": "Coleção de testes para a plataforma multimodular, incluindo todos os seus microservices.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Tenant Service",
			"description": "Endpoints relacionados ao gerenciamento de Tenants (clientes) da plataforma.",
			"item": [
				{
					"name": "Criar Novo Tenant",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Clínica Vet Mais Vida\",\n    \"subscribedModules\": [\n        \"mod-agendamento\",\n        \"mod-pets\"\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/tenants",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"tenants"
							]
						},
						"description": "Cria um novo tenant na plataforma. O status será definido como `ACTIVE` por padrão e as datas de criação/atualização serão geradas automaticamente."
					},
					"response": []
				},
				{
					"name": "Listar Todos os Tenants",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tenants",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"tenants"
							]
						},
						"description": "Retorna uma lista com todos os tenants cadastrados no sistema."
					},
					"response": []
				},
				{
					"name": "Buscar Tenant por ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tenants/{{tenantId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"tenants",
								"{{tenantId}}"
							]
						},
						"description": "Busca um tenant específico pelo seu ID.\n\n**Como usar:**\n1. Crie ou liste os tenants para obter um `id` válido.\n2. Vá para a aba `Variables` desta requisição (ou da pasta/coleção).\n3. Altere o valor da variável `tenantId` para o ID desejado."
					},
					"response": [],
					"variable": [
						{
							"key": "tenantId",
							"value": "COPIE_UM_ID_VALIDO_AQUI"
						}
					]
				},
				{
					"name": "Adicionar Módulo a um Tenant",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"moduleName\": \"mod-estoque\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/tenants/{{tenantId}}/modules",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"tenants",
								"{{tenantId}}",
								"modules"
							]
						},
						"description": "Adiciona um novo módulo à lista de módulos assinados por um tenant específico."
					},
					"response": []
				},
				{
					"name": "Deletar Tenant",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/tenants/{{tenantId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"tenants",
								"{{tenantId}}"
							]
						},
						"description": "Deleta um tenant do sistema usando o seu ID."
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8081"
		}
	]
}